<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/width_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marge_content"
            android:elevation="5dp"
            android:text="@string/width"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/toolbar_title_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/height_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marge_content"
            android:elevation="5dp"
            android:text="@string/height"
            android:textColor="@color/detail_text"
            android:textSize="@dimen/toolbar_title_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/width_type_text" />

        <ImageView
            android:id="@+id/main_photo_image"
            android:layout_width="wrap_content"
            android:layout_height="333dp"
            android:contentDescription="@string/detail_image_description"
            android:padding="@dimen/marge_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height_value_text"
            tools:src="@tools:sample/backgrounds/scenic" />

        <Button
            android:id="@+id/saveButton"
            style="@style/LoadStateRetryButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/save_button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_photo_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>